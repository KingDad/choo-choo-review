
<h1>CHOO CHOO REVIEW</h1>
<h2>All Available Lines:</h2>
<div>
  <% if @user %>
    <% if current_user[:profile_photo] %>
      <%= image_tag("/uploads/user/profile_photo/#{current_user.id}/#{current_user.profile_photo.file.file.split("/")[-1]}") %>
    <% end %>
  <% end %>
<div>
  <div>
    <% @trains.each do |train| %>
      <li>
      <%= link_to "#{train.name.upcase} LINE", train_path(train) %>
      </li>
    <% end %>
  </div>
</div>
